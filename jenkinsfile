pipeline{
    agent:any,
    tools{maven 'M3'}
    stages{
        stage('Checkout'){
            steps{
                git branch: 'main',
                url:'https://github.com/PratheekG1/SpringPetClinic.git'
            }
        }
        stage('build'){
            steps{
                sh 'mvn compile'
            }
        }
        stage('Test')
        {
            steps{
                sh 'mvn test'
            }
        }
        stage('Package')
        {
            steps{
                sh 'mvn package'
            }
        }
        stage('Deploy'){
            steps{
                sh 'java -jar C:/Users/user/.jenkins/workspace/PetClinicDeclarative/target/*.jar'
            }
        }
    }
}
